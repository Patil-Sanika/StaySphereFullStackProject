<% layout("/layouts/boilerplate") %>
    <style>
        .signupbtn {
            background-color: rgb(136, 166, 241);
            color: #fff;
        }

        .signupCard {
            box-shadow: 1px 1px 5px rgb(206, 206, 206);
        }
    </style>
    <div class="row mt-3">
        <div class="col-6 offset-3  p-3 mb-5 bg-white rounded signupCard">
            <h1 class="">SignUp</h1>
            <form action="/signup" method="POST" novalidate class="needs-validation">
                <div class="form-floating mb-3">
                    <input type="text" name="username" class="form-control" id="username floatingInput"
                        placeholder="Username" required>
                    <label for="username floatingInput">Username</label>
                    <div class="invalid-feedback">Enter username!</div>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" name="email" class="form-control" id="email floatingInput"
                        placeholder="name@example.com" required>
                    <label for="email floatingInput">Email address</label>
                    <div class="invalid-feedback">Enter email address!</div>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" name="password" class="form-control" id="password floatingPassword"
                        placeholder="Password" required>
                    <label for="password floatingPassword">Password</label>
                    <div class="invalid-feedback">Enter password!</div>
                </div>
                <button class="btn signupbtn">SignUp</button>
            </form>
        </div>
    </div>